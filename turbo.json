{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tests/**", "**/*.ts"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.vue", "tsconfig.json"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.vue", "**/*.js", "**/*.mjs"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "**/*.ts", "**/*.vue", "package.json"],
      "outputs": ["dist/**"]
    },
    "@supaslidev/docs#build": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.md", "**/*.vue", "**/*.ts", "nuxt.config.ts", "package.json"],
      "outputs": [".output/**"]
    },
    "playground#build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
