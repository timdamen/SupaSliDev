{
  "name": "@supaslidev/cli",
  "version": "0.1.0",
  "description": "CLI tool for scaffolding supaSliDev presentations",
  "bin": {
    "create-supaslidev": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint --config ../../oxlint.json .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "commander": "^13.1.0",
    "ejs": "^3.1.10",
    "picocolors": "^1.1.1",
    "ts-morph": "^24.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.10.0",
    "tsdown": "^0.12.5",
    "tsx": "^4.19.0",
    "typescript": "^5.3.3",
    "vitest": "^3.0.0"
  }
}
