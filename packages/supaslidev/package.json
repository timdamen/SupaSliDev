{
  "name": "supaslidev",
  "version": "0.1.0",
  "description": "CLI toolkit for managing Supaslidev presentations",
  "bin": {
    "supaslidev": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "server"
  ],
  "type": "module",
  "main": "./dist/cli/index.js",
  "exports": {
    ".": {
      "import": "./dist/cli/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "dev:api": "node server/api.js",
    "build": "node scripts/generate-presentations.mjs && vite build && tsdown",
    "build:cli": "tsdown",
    "preview": "vite preview",
    "generate": "node scripts/generate-presentations.mjs",
    "typecheck": "vue-tsc --noEmit && tsc --noEmit -p tsconfig.cli.json",
    "lint": "oxlint --config ../../oxlint.json .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@nuxt/ui": "^4.4.0",
    "commander": "^13.1.0",
    "js-yaml": "^4.1.1",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.0",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "tsdown": "^0.12.5",
    "tsx": "^4.19.0",
    "typescript": "^5.3.3",
    "vite": "^6.0.7",
    "vitest": "^3.0.0",
    "vue-tsc": "^2.0.0"
  }
}
