{
  "name": "supaslidev",
  "version": "0.1.0",
  "private": true,
  "description": "A monorepo for managing multiple Slidev presentations with shared resources",
  "type": "module",
  "scripts": {
    "dashboard": "supaslidev-dashboard",
    "dev:all": "turbo run dev",
    "build": "pnpm --filter",
    "build:all": "turbo run build",
    "lint": "turbo run lint --continue",
    "typecheck": "turbo run typecheck --continue",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "test": "turbo run test --continue",
    "prepare": "husky",
    "coderabbit:auth": "coderabbit auth login",
    "coderabbit:review": "coderabbit --prompt-only --type uncommitted",
    "coderabbit:review:committed": "coderabbit --prompt-only --type committed",
    "coderabbit:review:full": "coderabbit --prompt-only",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@supaslidev/dashboard": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "playwright-chromium": "^1.49.0",
    "semantic-release": "^25.0.2",
    "turbo": "^2.7.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,js,mjs,vue}": [
      "oxlint --fix",
      "oxfmt --write"
    ],
    "*.{json,md}": "oxfmt --write"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
